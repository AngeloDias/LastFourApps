<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.training.android.findmyphoneapp">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/dmap"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dmap"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MyTrackersPeopleActivity" android:label="@string/my_trackers_activity_label"/>
        <activity android:name=".LoginActivity" android:label="@string/login_activity_label"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>